{
  "name": "lapd-central-bot",
  "version": "0.5.0",
  "description": "A discord.js bot designed to be used as a helper to manage and operate role playing LAPD Discord servers.",
  "author": "EgizianoEG",
  "license": "MIT",
  "main": "Source/Main.ts",
  "type": "module",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/EgizianoEG/LAPD-Central-Bot"
  },
  "keywords": [
    "Roblox",
    "ER:LC",
    "LAPD",
    "Dispatch"
  ],
  "scripts": {
    "watch": "npm run watch:dev",
    "watch:dev": "tsx watch --clear-screen=false --ignore ./Build/**/* --ignore ./Source/Typings/**/* --env-file=.env .",
    "start:js": "node ./Build/Main.js",
    "start:ts": "tsx --env-file=.env .",
    "start": "npm run start:ts",
    "lint": "tsc --noEmit && eslint \"Source/**/*.{js,ts}\" && prettier -c --end-of-line auto \"Source/**/*.{js,ts,json}\"",
    "build": "tsc && tsconfig-replace-paths --project tsconfig.json && npm run cp:sf-to-b",
    "clean-build": "rm -rf Build & npm run build",
    "cp:secrets": "cp ./Source/Config/Secrets.example.ts ./Source/Config/Secrets.ts",
    "cp:sf-to-b": "cp -r ./Source/Resources/Imgs ./Build/Resources && cp -r ./Source/Resources/Fonts ./Build/Resources && cp -r ./Source/Resources/HTML ./Build/Resources && cp -r ./Source/Resources/Libs ./Build/Resources",
    "test:coverage": "jest \"--coverage\"",
    "test:secrets": "npm run test -- Tests/Other/Secrets.test.ts",
    "test:utils": "npm run test -- Tests/Utils/*",
    "test:other": "npm run test -- Tests/Other/*",
    "test:rscs": "npm run test -- Tests/Other/Resources.test.ts",
    "test": "jest"
  },
  "dependencies": {
    "@google-cloud/local-auth": "^3.0.1",
    "@logtail/node": "^0.5.2",
    "@logtail/winston": "^0.5.2",
    "@napi-rs/canvas": "^0.1.69",
    "axios": "^1.8.4",
    "chalk": "^5.3.0",
    "chrono-node": "^2.8.0",
    "convert-units": "^2.3.4",
    "date-fns": "^4.0.0",
    "dedent": "^1.5.3",
    "didyoumean2": "^7.0.4",
    "discord.js": "^14.19.3",
    "express": "^5.1.0",
    "ffi-rs": "^1.2.10",
    "googleapis": "^148.0.0",
    "humanize-duration": "^3.32.1",
    "linkifyjs": "^4.1.3",
    "lodash": "^4.17.21",
    "mongoose": "^8.13.2",
    "noblox.js": "^6.1.1",
    "node-cache": "^5.1.2",
    "node-cron": "^4.0.5",
    "node-ffi-rs": "^1.2.10",
    "node-os-utils": "^1.3.7",
    "parse-duration": "^2.1.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.23.0",
    "@faker-js/faker": "^9.6.0",
    "@stylistic/eslint-plugin-js": "^4.2.0",
    "@types/convert-units": "^2.3.9",
    "@types/express": "^5.0.0",
    "@types/humanize-duration": "^3.27.4",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.17.7",
    "@types/node": "^22.7.4",
    "@types/node-cron": "^3.0.11",
    "@types/node-os-utils": "^1.3.4",
    "@typescript-eslint/eslint-plugin": "^8.6.0",
    "@typescript-eslint/parser": "^8.6.0",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-sonarjs": "^3.0.2",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsconfig-replace-paths": "^0.0.14",
    "tsx": "^4.19.1",
    "typescript": "^5.8.2",
    "utility-types": "^3.11.0"
  },
  "engines": {
    "node": "^23.10.0",
    "npm": "^11.2.0"
  }
}
